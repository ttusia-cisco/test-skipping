name: CI

on:
  push:
    branches:
      - main
  pull_request:
    types:
      - opened
      - synchronize
      - reopened

jobs:
  make_success:
    runs-on: ubuntu-latest
    steps:
      - name: Run success script
        run: echo "Running success script"
  sub_job:
    name: name: ${{true == true }}
    runs-on: ubuntu-latest
    if: false
    steps:
      - name: Run sub workflow script
        run: echo "Running sub workflow script"
  build:
    needs: [sub_job, sub_job2]
    runs-on: ubuntu-latest
    steps:
      - name: Run build script
        run: echo "Running fine"
